<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yedam.finalPrj.show.serviceImpl.ShowMapper">

	<select id="showFindAll" resultType="com.yedam.finalPrj.show.Show">
		SELECT * FROM show
	</select>
	
	<select id="showReserved">
		SELECT	t.show_res_no, r.mem_no, r.res_time, r.res_amt, (s.price * r.res_amt), r.status
		FROM 	show_reservation r, seat t, show s
			/
	</select>
</mapper>